<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <nav class="bg-white">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="https://flowbite.com/" class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="https://i.pinimg.com/originals/04/78/ef/0478efc8b4099fc23ee0bf1e1d5c7a00.png" class="h-8"
                    alt="Flowbite Logo">
                <span class="text-3xl text-purple-900 font-bold">Love Aaj Kal</span>
            </a>
            <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
                <a href="http://localhost:4000/"
                    class="text-white mr-10 bg-green-400 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-green-500 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    ChatRoom üí¨</a>
                <a href="/logout"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-purple-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Logout</a>
                <button data-collapse-toggle="navbar-sticky" type="button"
                    class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                    aria-controls="navbar-sticky" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M1 1h15M1 7h15M1 13h15" />
                    </svg>
                </button>
            </div>
        </div>
    </nav>

    <div class="flex flex-wrap m-10">
        <% users.forEach(element=> { %>
            <div class="card m-10" style="width: 18rem;">
                <img src="<%= element.photo %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h3 class="card-title text-3xl font-bold ">
                        <%= element.name %>
                    </h3>
                    <p class="card-text text-2xl">
                        <%= element.bio %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <span class="font-bold">Location :</span>
                        <%= element.location %>
                    </li>
                    <li class="list-group-item">
                        <span class="font-bold">Date of Birth :</span>
                        <%= element.DOB %>
                    </li>
                    <li class="list-group-item">
                        <span class="font-bold">Education :</span>
                        <%= element.education %>
                    </li>
                    <li class="list-group-item">
                        <span class="font-bold">Preference :</span>
                        <%= element.preference %>
                    </li>
                </ul>

                <div class="card-body">
                    <a href="/view/<%= element._id %>" type="submit"
                        class="card-link w-1/2  mb-2 px-3 py-2 bg-purple-600 rounded-lg text-white font-bold">
                        View More
                    </a>
                    <form action="/like/<%= element._id %>" method="POST">
                        <button type="submit"
                            class="card-link w-1/2 px-3 py-2 bg-purple-600 rounded-lg text-white font-bold">
                            Like ü§ç (<%= element.likes.length %>)
                        </button>
                    </form>

                    <form action="/report/<%=element._id  %>" method="get">
                        <button type="submit"
                            class="card-link  mt-2 w-1/2 px-3 py-2 bg-yellow-500 rounded-lg text-white font-bold">
                            Report
                        </button>
                    </form>
                    <!-- <a href="#" class="card-link">Edit ‚úèÔ∏è</a> -->
                </div>
            </div>
            <% }); %>
    </div>
    <script>
        window.embeddedChatbotConfig = {
            chatbotId: "Pg5yyRVXDhOEFbh4ENXJO",
            domain: "www.chatbase.co"
        }
    </script>
    <script src="https://www.chatbase.co/embed.min.js" chatbotId="Pg5yyRVXDhOEFbh4ENXJO" domain="www.chatbase.co" defer>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>